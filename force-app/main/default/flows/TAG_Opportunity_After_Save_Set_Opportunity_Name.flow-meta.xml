    <decisions>
        <description>Checks the Buyer type and sends the flow down different paths based on the value.</description>
        <name>Check_Buyer_Buyer_Type</name>
        <label>Check Buyer Buyer Type</label>
        <locationX>710</locationX>
        <locationY>431</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Buyer_Add_on</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Account.TAG_Buyer_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Add-on</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Check_Buyer_Parent</targetReference>
            </connector>
            <label>Add-on</label>
        </rules>
        <rules>
            <name>Buyer_Platform</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Account.TAG_Buyer_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Platform</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Buyer_Platform</targetReference>
            </connector>
            <label>Platform</label>
        </rules>
    </decisions>
    <decisions>
        <description>Checks to see if the Opportunity.Buyer field has been filled out and sends the flow down different paths based on the value.</description>
        <name>Check_Buyer_Field</name>
