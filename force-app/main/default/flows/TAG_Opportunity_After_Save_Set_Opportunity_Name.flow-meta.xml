    <description>Automation that sets the opportunity name.</description>
    <environments>Default</environments>
    <formulas>
        <description>Formula for Buyer opportunities where the Account buyer type is set to Add On and the Account does not have a parent record.</description>
        <name>forOppNameBuyerAddOnNoParent</name>
        <dataType>String</dataType>
        <expression>{!$Record.Account.Name}+&apos; - Add-on Buyer&apos;</expression>
    </formulas>
    <formulas>
        <description>Formula for Buyer opportunities where the Account buyer type is set to Add On and the Account has a parent record.</description>
        <name>forOppNameBuyerAddOnWithParent</name>
        <dataType>String</dataType>
        <expression>{!$Record.Account.Name}+&apos; (&apos;+{!$Record.Account.Parent.Name}+&apos;) - Add-on Buyer&apos;</expression>
    </formulas>
    <formulas>
        <description>Formula for Buyer opportunities where the account buyer type is set to platform.</description>
        <name>forOppNameBuyerPlatform</name>
        <dataType>String</dataType>
        <expression>{!$Record.Account.Name}+&apos; - Platform Buyer&apos;</expression>
    </formulas>
    <formulas>
        <description>Formula to calculate the opportunity name for Target Company opportunities where the buyer type is Add-on.</description>
        <name>forOppNameTargetCompanyAddOn</name>
        <dataType>String</dataType>
        <expression>{!$Record.Account.Name}+&apos; - &apos;+{!$Record.TAG_Buyer__r.Name}</expression>
    </formulas>
    <formulas>
        <description>Formula for the opportunity name for Target Company opportunities where the Buyer field is NULL.</description>
        <name>forOppNameTargetCompanyBuyerNull</name>
        <dataType>String</dataType>
        <expression>{!$Record.Account.Name}+&apos; Target Company Opportunity&apos;</expression>
    </formulas>
    <formulas>
        <description>Formula for Target Company opportunities where the buyer type is platform.</description>
        <name>forOppNameTargetCompanyPlatform</name>
        <dataType>String</dataType>
        <expression>{!$Record.Account.Name}+&apos; - &apos;+{!$Record.TAG_Buyer__r.Name}+&apos; (&apos;+TEXT({!$Record.TAG_Buyer__r.Industry})+&apos;)&apos;</expression>
    </formulas>
